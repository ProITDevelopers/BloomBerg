<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

    <android.support.constraint.ConstraintLayout
                                                 android:layout_width="match_parent"
                                                 android:layout_height="wrap_content"
                                                 tools:context=".activitys.HomeFragment" android:background="#FFFFFF">


        <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                              android:id="@+id/guideline" app:layout_constraintGuide_begin="16dp"
                                              android:orientation="vertical"
        />
        <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                              android:id="@+id/guideline2"
                                              android:orientation="vertical" android:layout_marginEnd="16dp"
                                              app:layout_constraintEnd_toEndOf="parent"
                                              app:layout_constraintGuide_end="16dp"/>
        <ImageView
                android:src="@drawable/noticia_bloomberg"
                android:layout_width="0dp"
                android:layout_height="300dp"
                android:id="@+id/imageView" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintDimensionRatio=""
                android:scaleType="fitXY"/>
        <TextView
                android:text="MARKETS"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView" app:layout_constraintStart_toStartOf="@+id/guideline"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView" android:textSize="12sp" android:textColor="#971D1C1C"/>
        <TextView
                android:text="IMF Warnz Zimbabwe Against Play Boost as Living Standards Crash"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView2" app:layout_constraintStart_toStartOf="@+id/guideline"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:textSize="18sp"/>
        <ImageView
                android:src="@drawable/ic_fiber_manual_record_black_24dp"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:id="@+id/imageView2"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView2"
                app:layout_constraintStart_toStartOf="@+id/guideline"/>
        <TextView
                android:text="New curremcy has eroded spending power of government workers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView3" app:layout_constraintStart_toEndOf="@+id/imageView2"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintEnd_toStartOf="@+id/guideline2"
                android:textColor="#000000"/>
        <ImageView
                android:src="@drawable/ic_fiber_manual_record_black_24dp"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:id="@+id/imageView3" app:layout_constraintStart_toStartOf="@+id/guideline"
                app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginTop="8dp"/>
        <TextView
                android:text="Finance minister Ncube says he advocates increasing wages"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:id="@+id/textView4" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintStart_toEndOf="@+id/imageView3"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                android:layout_marginStart="8dp" android:textColor="#000000"/>
        <TextView
                android:text="1 hr ago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                app:layout_constraintEnd_toStartOf="@+id/textView7"
                app:layout_constraintHorizontal_chainStyle="packed" app:layout_constraintStart_toStartOf="@+id/guideline"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView4"/>
        <TextView
                android:text=" . "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                app:layout_constraintStart_toEndOf="@+id/textView6" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/textView8"
                app:layout_constraintTop_toTopOf="@+id/textView6"/>
        <TextView
                android:text="3 min read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8" app:layout_constraintStart_toEndOf="@+id/textView7"
                app:layout_constraintTop_toTopOf="@+id/textView7"/>
        <ImageView
                android:src="@drawable/bloomberg_favoritos"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/imageView4" app:layout_constraintEnd_toStartOf="@+id/guideline2"
                android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView4"/>
        <ImageView
                android:src="@drawable/bloomberg_partilhar"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/imageView5" app:layout_constraintEnd_toStartOf="@+id/imageView4"
                android:layout_marginEnd="16dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView4"/>
        <ImageView
                android:src="@drawable/separador_pontos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView6" app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintStart_toStartOf="@+id/guideline" app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toBottomOf="@+id/textView8" android:layout_marginTop="16dp"/>
        <TextView
                android:text="Media Rumo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView10" app:layout_constraintStart_toStartOf="@+id/guideline"
                android:textColor="#FFFFFF" android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textStyle="bold" android:layout_marginTop="24dp"
                app:layout_constraintTop_toTopOf="@+id/guideline3" android:textSize="30sp"/>
        <ImageButton
                android:src="@drawable/ic_search_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton3"
                android:background="@android:color/transparent" app:layout_constraintEnd_toStartOf="@+id/guideline2"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toTopOf="@+id/guideline3"/>
        <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                              android:id="@+id/guideline3" app:layout_constraintGuide_begin="20dp"
                                              android:orientation="horizontal"/>
        <android.support.v4.view.ViewPager
                android:layout_width="0dp"
                android:layout_height="130dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView6" app:layout_constraintStart_toStartOf="@+id/guideline"
                app:layout_constraintEnd_toStartOf="@+id/guideline2" android:id="@+id/viewPager"/>

        <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
                android:id="@+id/worm_dots_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:dotsColor="#929290"
                app:dotsStrokeColor="#D3D3D3"
                app:dotsCornerRadius="8dp"
                app:dotsSize="14dp"
                app:dotsSpacing="4dp"
                app:dotsStrokeWidth="2dp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline2"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/guideline"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/viewPager"/>


        <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="1980dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/worm_dots_indicator">

            <ImageView

                    android:src="@drawable/separador_pontos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

            />
            <ImageView
                    android:id="@+id/div2"
                    android:src="@drawable/separador_pontos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

            />
            <ImageView

                    android:src="@drawable/separador_pontos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

            />


            <fragment
                    android:id="@+id/first_frg"
                    android:name="proitdevelopers.com.bloomberg.TopNewsFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>



        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</ScrollView>
