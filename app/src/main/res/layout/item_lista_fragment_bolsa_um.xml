<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="100dp"
                                             android:layout_height="wrap_content">

    <TextView
            android:layout_width="5dp"
            android:layout_height="0dp"
            android:id="@+id/textView5" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:background="#9FEBB4"/>
    <TextView
            android:text="S&amp;P 500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/servico_tv" android:textColor="#000000"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold" app:layout_constraintStart_toEndOf="@+id/textView5"
            android:layout_marginStart="16dp" android:textSize="14sp"/>
    <TextView
            android:text="2,847.60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/valor_tv" app:layout_constraintStart_toEndOf="@+id/textView5"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/servico_tv" android:textSize="16sp"/>
    <TextView
            android:text="+0.25%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/variacao_tv"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/textView14"
            app:layout_constraintTop_toBottomOf="@+id/valor_tv" android:background="#6169EBA3"
            android:layout_marginStart="6dp"/>
    <TextView
            android:layout_width="16dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView14"
            android:background="@drawable/ic_arrow_drop_up_black_24dp"
            app:layout_constraintTop_toBottomOf="@+id/valor_tv" app:layout_constraintStart_toEndOf="@+id/textView5"
            android:layout_marginStart="8dp"
    />
    <TextView
            android:text="9:55 PM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView15" android:textSize="10sp" app:layout_constraintStart_toEndOf="@+id/textView5"
            android:layout_marginStart="16dp" app:layout_constraintTop_toBottomOf="@+id/variacao_tv"/>
</android.support.constraint.ConstraintLayout>