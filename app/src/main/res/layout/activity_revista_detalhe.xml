<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        tools:context=".activitys.quiosque.RevistaDetalheActivity">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/corlorMostarda"
                 />

    </com.google.android.material.appbar.AppBarLayout>

<!--    <androidx.appcompat.widget.Toolbar-->
<!--            android:id="@+id/toolbar"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="?attr/actionBarSize"-->
<!--            app:titleTextColor="@color/white"-->
<!--            android:background="@color/black"-->
<!--            app:popupTheme="@style/AppTheme.PopupOverlay">-->

<!--    </androidx.appcompat.widget.Toolbar>-->

    <View
            android:id="@+id/viewDivider"
            android:layout_below="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/corlorMostarda" />

    <LinearLayout
            android:layout_below="@+id/viewDivider"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



        <ImageView
                android:id="@+id/imgRev"
                android:layout_height="300dp"
                android:layout_width="match_parent"
                android:layout_margin="20dp"
                android:scaleType="fitCenter"

                />

        <TextView
                android:id="@+id/txt_name"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/corlorMostarda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"/>

        <TextView
                android:id="@+id/txt_description"
                android:textColor="@color/corlorMostarda"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"/>

        <Button
                android:id="@+id/btnLer"
                android:layout_width="270dp"
                android:text="Ler"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:background="@drawable/borda_arredondada_login"
                android:layout_height="44dp" />



    </LinearLayout>





</RelativeLayout>
