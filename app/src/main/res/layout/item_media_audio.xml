<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:paddingBottom="10dp"
                                             android:layout_height="wrap_content" style="@style/txt_categoria"
                                             android:background="@color/colorTxtPreta">
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guidelineEsquerda" app:layout_constraintGuide_begin="20dp"
                                          android:orientation="vertical"/>

    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline2"
                                          android:orientation="vertical" app:layout_constraintGuide_end="20dp"/>

    <TextView
            android:text="2:06"
            android:layout_width="57dp"
            android:layout_height="22dp"
            android:id="@+id/textView11"

            app:layout_constraintStart_toStartOf="@+id/imageView17" style="@style/txt_duracao_video"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="1.0"
            app:layout_constraintEnd_toEndOf="@+id/guideline2" app:layout_constraintHorizontal_bias="0.0"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/tamanho_10" app:srcCompat="@drawable/ic_play_arrow_white_24dp"
            android:id="@+id/imageView17"
            app:layout_constraintBottom_toBottomOf="@+id/textView11"
            app:layout_constraintTop_toTopOf="@+id/textView11"
            app:layout_constraintStart_toStartOf="@+id/guidelineEsquerda"
            app:layout_constraintEnd_toStartOf="@+id/textView11"
            android:layout_marginStart="16dp"
            android:contentDescription="@string/img_cir_vermelho_ic"/>


    <TextView
            android:text="Noah Smith on Not All Economy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView20"
            style="@style/txt_noticia_titulo_sub_branca"
            app:layout_constraintStart_toEndOf="@+id/guidelineEsquerda"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintHorizontal_bias="0.0"/>

    <TextView
            android:text="September 4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView21"
            app:layout_constraintTop_toBottomOf="@+id/textView20"
            app:layout_constraintStart_toEndOf="@+id/guidelineEsquerda"
            app:layout_constraintEnd_toStartOf="@+id/imageView25"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            style="@style/txt_noticia_titulo_sub_branca"/>

    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_share_white_24dp"
            android:id="@+id/imageView25"
            app:layout_constraintEnd_toStartOf="@+id/imageView26"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textView20"
            android:contentDescription="@string/txt_separador"/>

    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_bookmark_border_white_24dp"
            android:id="@+id/imageView26"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView20"
            android:contentDescription="@string/txt_separador"/>

    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:srcCompat="@drawable/separador_pontos_branco"
            android:id="@+id/imageView24"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintStart_toEndOf="@+id/guidelineEsquerda"
            app:layout_constraintTop_toBottomOf="@+id/textView21"
            android:layout_marginTop="12dp"
            android:contentDescription="@string/txt_separador"/>




</android.support.constraint.ConstraintLayout>