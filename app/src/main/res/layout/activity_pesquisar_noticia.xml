<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activitys.PesquisarNoticiaActivity">

    <Button
            android:text="@string/txt_cancelar"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/tamanho_30"
            android:id="@+id/button"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toEndOf="@+id/editText"
            app:layout_constraintHorizontal_bias="0.5"
            android:textSize="12sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/editText" android:textAllCaps="true"
            app:layout_constraintEnd_toStartOf="@+id/guidelineDireita" android:onClick="cancelarPesquisa"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="@dimen/tamanho_30"
            android:inputType="text"
            android:imeOptions="actionSearch"
            android:ems="10"
            android:id="@+id/editText"
            tools:ignore="Autofill"
            android:hint="@string/txt_hint_pesquisa"
            app:layout_constraintStart_toStartOf="@+id/guidelineEsquerda"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/button"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"
            android:drawableStart="@drawable/ic_search_cinza_24dp"
            style="@style/edit_txt_pesquisa"/>
    <TextView
            android:text="@string/explorar_topicos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView35" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingStart="@dimen/tamanho_20"
            android:paddingEnd="@dimen/tamanho_20"
            android:background="@color/color_edit_txt" android:textColor="#CE757474"
            android:paddingTop="@dimen/tamanho_4" android:paddingBottom="@dimen/tamanho_4"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guidelineEsquerda" app:layout_constraintGuide_begin="20dp"
                                          android:orientation="vertical"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guidelineDireita"
                                          android:orientation="vertical" app:layout_constraintGuide_end="20dp"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView35"
            app:layout_constraintEnd_toStartOf="@+id/guidelineDireita"
            app:layout_constraintStart_toStartOf="@+id/guidelineEsquerda" android:id="@+id/recyclerViewTopicos"/>

</android.support.constraint.ConstraintLayout>