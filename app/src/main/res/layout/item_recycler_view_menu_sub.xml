<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">
    <ImageView
            android:layout_width="@dimen/tamanho_30"
            android:layout_height="40dp" app:srcCompat="@drawable/menu_home"
            android:id="@+id/item_menu_img"
            app:layout_constraintStart_toStartOf="@+id/guidelineEsquerda" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toStartOf="@+id/guideline11"
            android:layout_marginEnd="8dp"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guidelineEsquerda"
                                                app:layout_constraintGuide_begin="40dp"
                                                android:orientation="vertical"/>
    <TextView
            android:text="@string/menu_inicio"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:id="@+id/item_menu_recycler"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/item_menu_img" app:layout_constraintEnd_toEndOf="parent"
            android:typeface="normal" android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/guideline11"
            android:layout_marginBottom="8dp" android:layout_marginTop="8dp"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/separador_pontos"
            android:id="@+id/item_re_separador"
            app:layout_constraintStart_toStartOf="@+id/item_menu_recycler"
            app:layout_constraintEnd_toEndOf="@+id/item_menu_recycler"
            app:layout_constraintTop_toBottomOf="@+id/item_menu_recycler"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline11"
                                                android:orientation="vertical"
                                                app:layout_constraintGuide_begin="78dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>