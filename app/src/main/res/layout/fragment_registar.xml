<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragmentos.principalSemSessaoIniciada.RegistarSeFragment">

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/txt_hint_nome"
            android:theme="@style/EditTextStylePreto"
            android:id="@+id/textInputUsuario_z"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView23"
            app:layout_constraintStart_toStartOf="@+id/guidelineEsquerda"
            app:layout_constraintEnd_toEndOf="@+id/textView23">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/frag_resgistar_nome_edit"
                android:text="Dboy"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/txt_hint_email"
            android:theme="@style/EditTextStylePreto"
            android:id="@+id/textInputUsuario_x"
            app:layout_constraintStart_toStartOf="@+id/guidelineEsquerda"
            app:layout_constraintEnd_toEndOf="@+id/textView23"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textInputUsuario_z">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/frag_resgistar_email_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:text="Dboy@gmail.com"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/txt_hint_senha"
            android:theme="@style/EditTextStylePreto"
            android:id="@+id/textInputUsuariorx"
            app:layout_constraintStart_toStartOf="@+id/guidelineEsquerda"
            app:layout_constraintEnd_toEndOf="@+id/textView23"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textInputUsuario_x">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/frag_resgistar_senha_edit"
                android:inputType="textPassword"
                android:text="123456"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/txt_hint_repita_senha"
            android:theme="@style/EditTextStylePreto"
            android:id="@+id/textInputUsuariorxrr"
            app:layout_constraintStart_toStartOf="@+id/guidelineEsquerda"
            app:layout_constraintEnd_toEndOf="@+id/textView23"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textInputUsuariorx">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/frag_resgistar_senha_conf_edit"
                android:inputType="textPassword"
                android:text="123456"/>
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
            app:srcCompat="@drawable/ic_keyboard_arrow_left_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/frag_reg_btn_voltar"
            app:layout_constraintTop_toTopOf="@+id/guideline3"
            app:layout_constraintStart_toStartOf="@+id/guidelineEsquerda"
            android:contentDescription="@string/img_voltar_ic"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline3"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_begin="40dp"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guidelineEsquerda"
                                                app:layout_constraintGuide_begin="20dp"
                                                android:orientation="vertical"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guidelineDireita"
                                                android:orientation="vertical" app:layout_constraintGuide_end="20dp"/>
    <TextView
            android:text="@string/txt_criar_conta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView23" android:textStyle="bold"
            android:textColor="#000000" app:layout_constraintStart_toEndOf="@+id/frag_reg_btn_voltar"
            app:layout_constraintTop_toTopOf="@+id/guideline3"
            app:layout_constraintEnd_toStartOf="@+id/guidelineDireita"
            app:layout_constraintBottom_toBottomOf="@+id/frag_reg_btn_voltar" android:textAlignment="center"
            android:textSize="16sp" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="1.0"/>

    <Button
            android:text="@string/txt_entrar_"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/frag_reg_btnEntrar"
            style="@style/MyButtonStylePreto"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintStart_toStartOf="@+id/guidelineEsquerda"
            app:layout_constraintEnd_toStartOf="@+id/guidelineDireita" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textInputUsuariorxrr"/>
    <TextView
            android:text="@string/txt_pol_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView36"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frag_reg_btnEntrar"
            app:layout_constraintStart_toEndOf="@+id/textView38"
            app:layout_constraintHorizontal_bias="0.5"
            android:textSize="12sp" app:layout_constraintEnd_toEndOf="@+id/frag_reg_btnEntrar"
            android:textStyle="bold" android:textColor="#000000" android:layout_marginTop="16dp"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="@string/txt_pol_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView37"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/textView36"
            app:layout_constraintEnd_toStartOf="@+id/textView39" android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/textView36"
            app:layout_constraintStart_toStartOf="@+id/guidelineEsquerda" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_chainStyle="packed" android:layout_marginTop="4dp"/>
    <TextView
            android:text="@string/txt_pol_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView38"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintTop_toTopOf="@+id/textView36"
            app:layout_constraintStart_toStartOf="@+id/guidelineEsquerda"
            app:layout_constraintEnd_toStartOf="@+id/textView36"
            app:layout_constraintHorizontal_chainStyle="packed" android:textSize="12sp" android:textColor="#000000"/>
    <TextView
            android:text="@string/txt_pol_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView39"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView37" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/textView37" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/guidelineDireita" android:textSize="12sp"
            android:layout_marginStart="4dp" android:textColor="#000000" android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>