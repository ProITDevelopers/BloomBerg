<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TopNewsFragment">


        <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                              android:id="@+id/guideline" app:layout_constraintGuide_begin="16dp"
                                              android:orientation="vertical"
        />
        <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                              android:id="@+id/guideline2"
                                              android:orientation="vertical" android:layout_marginEnd="16dp"
                                              app:layout_constraintEnd_toEndOf="parent"
                                              app:layout_constraintGuide_end="16dp"/>


        <TextView
                android:text="Top News"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView10" app:layout_constraintStart_toStartOf="@+id/guideline"
                android:textColor="#000000" android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent" android:textSize="30sp"

        />

        <ImageView
                android:src="@drawable/trump_news"
                android:layout_width="0dp"
                android:layout_height="280dp"
                android:id="@+id/imageView" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/textView10"
                app:layout_constraintDimensionRatio=""
                android:scaleType="fitXY"/>
        <TextView
                android:text="POLITICS"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView" app:layout_constraintStart_toStartOf="@+id/guideline"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView" android:textSize="12sp"
                android:textColor="#971D1C1C"/>
        <TextView
                android:text="Europe Has Enough of Trump's Tirades From.."
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView2" app:layout_constraintStart_toStartOf="@+id/guideline"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:textSize="18sp"/>


        <TextView
                android:text="1 hr ago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                app:layout_constraintEnd_toStartOf="@+id/textView7"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView2"/>
        <TextView
                android:text=" . "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                app:layout_constraintStart_toEndOf="@+id/textView6" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/textView8"
                app:layout_constraintTop_toTopOf="@+id/textView6"/>
        <TextView
                android:text="3 min read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8" app:layout_constraintStart_toEndOf="@+id/textView7"
                app:layout_constraintTop_toTopOf="@+id/textView7"/>
        <ImageView
                android:src="@drawable/bloomberg_favoritos"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/imageView4" app:layout_constraintEnd_toStartOf="@+id/guideline2"
                android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView2"/>
        <ImageView
                android:src="@drawable/bloomberg_partilhar"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/imageView5" app:layout_constraintEnd_toStartOf="@+id/imageView4"
                android:layout_marginEnd="16dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView2"/>
        <ImageView
                android:src="@drawable/separador_pontos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView6" app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintStart_toStartOf="@+id/guideline" app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toBottomOf="@+id/textView8" android:layout_marginTop="16dp"/>


        <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                              android:id="@+id/guideline3" app:layout_constraintGuide_begin="20dp"
                                              android:orientation="horizontal"/>


        <ListView
                android:id="@+id/listviewNews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:divider="@null"
                app:layout_constraintTop_toBottomOf="@+id/imageView6"
                app:layout_constraintVertical_bias="2.0"



        />




</android.support.constraint.ConstraintLayout>


