<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guidelineEsqerda" app:layout_constraintGuide_begin="20dp"
                                                android:orientation="vertical"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guidelineDireita"
                                                android:orientation="vertical" app:layout_constraintGuide_end="20dp"/>
    <TextView
            android:text="@string/txt_renda_fixa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView24"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="@+id/guidelineEsqerda"
            app:layout_constraintEnd_toStartOf="@+id/guidelineDireita"
            app:layout_constraintHorizontal_bias="0.0" style="@style/txt_titulo_categorias"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/tamanho_200" app:srcCompat="@drawable/noticia_img"
            android:id="@+id/imageView30" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView24" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" style="@style/img_noticia"
            android:contentDescription="@string/img_noticia"/>
    <TextView
            android:text="@string/txt_categoria_destaque"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView25"
            app:layout_constraintTop_toBottomOf="@+id/imageView30"
            app:layout_constraintStart_toStartOf="@+id/guidelineEsqerda" android:layout_marginTop="8dp"/>
    <TextView
            android:text="@string/txt_noticia_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView26" app:layout_constraintStart_toStartOf="@+id/guidelineEsqerda"
            app:layout_constraintTop_toBottomOf="@+id/textView25"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintEnd_toStartOf="@+id/guidelineDireita"
            style="@style/txt_noticia_titulo_sub" android:textAlignment="viewStart"/>
    <ImageView
            android:layout_width="@dimen/tamanho_16"
            android:layout_height="@dimen/tamanho_20" app:srcCompat="@drawable/bloomberg_favoritos"
            android:id="@+id/imageView31"
            app:layout_constraintEnd_toStartOf="@+id/guidelineDireita"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView26"
            style="@style/icone_estilo_partilha_favorito" android:contentDescription="@string/img_favoritos"/>
    <ImageView
            android:layout_width="@dimen/tamanho_16"
            android:layout_height="@dimen/tamanho_20" app:srcCompat="@drawable/bloomberg_partilhar"
            android:id="@+id/imageView33"
            style="@style/icone_estilo_partilha_favorito" app:layout_constraintEnd_toStartOf="@+id/imageView31"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@+id/imageView31" android:contentDescription="@string/img_partilha"/>
    <TextView
            android:text="@string/txt_data_pub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView27"
            app:layout_constraintTop_toTopOf="@+id/imageView33"
            app:layout_constraintStart_toStartOf="@+id/guidelineEsqerda" style="@style/txt_data"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:srcCompat="@drawable/separador_pontos"
            android:id="@+id/imageView34"
            app:layout_constraintEnd_toStartOf="@+id/guidelineDireita"
            app:layout_constraintStart_toStartOf="@+id/guidelineEsqerda"
            app:layout_constraintTop_toBottomOf="@+id/imageView31" android:layout_marginTop="8dp"
            android:contentDescription="@string/txt_separador"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline8"
                                                android:orientation="vertical" app:layout_constraintGuide_percent="0.5"/>
    <TextView
            android:text="@string/txt_categoria_sociedade"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView28"
            app:layout_constraintTop_toBottomOf="@+id/imageView34"
            app:layout_constraintStart_toStartOf="@+id/guidelineEsqerda"
            app:layout_constraintEnd_toStartOf="@+id/guideline8"
            app:layout_constraintHorizontal_bias="0.0" style="@style/txt_categoria"/>
    <TextView
            android:text="@string/txt_noticia_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView29" app:layout_constraintStart_toStartOf="@+id/guidelineEsqerda"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintEnd_toStartOf="@+id/guideline8"
            app:layout_constraintTop_toBottomOf="@+id/textView28" style="@style/txt_noticia_titulo_sub"/>
    <TextView
            android:text="@string/txt_categoria_politica"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView30" app:layout_constraintStart_toStartOf="@+id/guideline8"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView34"
            app:layout_constraintEnd_toStartOf="@+id/guidelineDireita"
            app:layout_constraintHorizontal_bias="0.0" style="@style/txt_categoria"/>
    <TextView
            android:text="@string/txt_noticia_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView31" app:layout_constraintStart_toStartOf="@+id/guideline8"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintEnd_toStartOf="@+id/guidelineDireita"
            app:layout_constraintTop_toBottomOf="@+id/textView30" android:layout_marginStart="16dp"
            style="@style/txt_noticia_titulo_sub"/>
    <androidx.constraintlayout.widget.Barrier android:layout_width="wrap_content" android:layout_height="wrap_content"
                                              android:id="@+id/barrier2" app:barrierDirection="bottom"
                                              app:constraint_referenced_ids="textView31,textView29"
                                              tools:layout_editor_absoluteY="846dp"/>
    <ImageView
            android:layout_width="@dimen/tamanho_16"
            android:layout_height="@dimen/tamanho_20" app:srcCompat="@drawable/bloomberg_favoritos"
            android:id="@+id/imageView35" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="@+id/barrier2"
            app:layout_constraintStart_toEndOf="@+id/imageView36"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/guidelineDireita"
            style="@style/icone_estilo_partilha_favorito" android:contentDescription="@string/img_favoritos"/>
    <ImageView
            android:layout_width="@dimen/tamanho_16"
            android:layout_height="@dimen/tamanho_20" app:srcCompat="@drawable/bloomberg_partilhar"
            android:id="@+id/imageView36"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintEnd_toStartOf="@+id/imageView35"
            app:layout_constraintHorizontal_chainStyle="packed" android:layout_marginEnd="16dp"
            style="@style/icone_estilo_partilha_favorito"
            app:layout_constraintTop_toTopOf="@+id/imageView35" app:layout_constraintStart_toEndOf="@+id/textView32"
            android:layout_marginStart="8dp" android:contentDescription="@string/img_partilha"/>
    <TextView
            android:text="@string/txt_data_pub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView32"
            app:layout_constraintTop_toTopOf="@+id/imageView36" app:layout_constraintStart_toStartOf="@+id/guideline8"
            android:layout_marginStart="16dp" style="@style/txt_data"/>
    <TextView
            android:text="@string/txt_data_pub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView33" style="@style/txt_data"
            app:layout_constraintStart_toStartOf="@+id/guidelineEsqerda"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="@+id/barrier2"/>
    <ImageView
            android:layout_width="@dimen/tamanho_16"
            android:layout_height="@dimen/tamanho_20" app:srcCompat="@drawable/bloomberg_favoritos"
            android:id="@+id/imageView37"
            app:layout_constraintStart_toEndOf="@+id/imageView38" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/guideline8"
            style="@style/icone_estilo_partilha_favorito"
            app:layout_constraintTop_toTopOf="@+id/textView33" android:contentDescription="@string/img_favoritos"/>
    <ImageView
            android:layout_width="@dimen/tamanho_16"
            android:layout_height="@dimen/tamanho_20" app:srcCompat="@drawable/bloomberg_partilhar"
            android:id="@+id/imageView38"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintEnd_toStartOf="@+id/imageView37" app:layout_constraintStart_toEndOf="@+id/textView33"
            android:layout_marginStart="8dp" style="@style/icone_estilo_partilha_favorito"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintTop_toTopOf="@+id/imageView37" android:layout_marginEnd="16dp"
            android:contentDescription="@string/img_partilha"/>
    <androidx.constraintlayout.widget.Barrier android:layout_width="wrap_content" android:layout_height="wrap_content"
                                              android:id="@+id/barrier3" app:barrierDirection="bottom"
                                              app:constraint_referenced_ids="textView32,imageView37,imageView38,imageView35,textView33,imageView36"
                                              tools:layout_editor_absoluteY="846dp"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/barrier3" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/recyclerView"/>
    <TextView
            android:text="@string/txt_ver_renda_fixa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView34" style="@style/txt_ver"
            app:layout_constraintStart_toStartOf="@+id/guidelineEsqerda" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/recyclerView"
            app:layout_constraintEnd_toStartOf="@+id/imageView39" app:layout_constraintHorizontal_bias="0.0"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_chevron_right_black_24dp"
            android:id="@+id/imageView39"
            app:layout_constraintEnd_toStartOf="@+id/guidelineDireita"
            app:layout_constraintTop_toTopOf="@+id/textView34" android:contentDescription="@string/img_voltar_ic"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:srcCompat="@drawable/separador_pontos"
            android:id="@+id/imageView40"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/imageView39"
            android:contentDescription="@string/txt_separador"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:srcCompat="@drawable/separador_pontos"
            android:id="@+id/imageView41"
            app:layout_constraintTop_toBottomOf="@+id/imageView40" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:contentDescription="@string/txt_separador"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:srcCompat="@drawable/separador_pontos"
            android:id="@+id/imageView42"
            app:layout_constraintTop_toBottomOf="@+id/imageView41" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="@string/txt_separador"/>
</androidx.constraintlayout.widget.ConstraintLayout>